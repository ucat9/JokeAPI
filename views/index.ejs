<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jokes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/style.css">
</head>
<body>
    <div class="container">
        <h1>Random Jokes through API</h1>
        <% if(locals.content) { %>
            <% const content_JS = JSON.parse(content); %>
            <% if (content_JS.type === "twopart") { %>
                <p>Category: <%= content_JS.category %><%=  %></p>
                <p>Type: <%= content_JS.type %><%=  %></p>
                <p>Joke Part-1: <%= content_JS.setup %><%=  %></p>
                <p>Joke Punch Line: <%= content_JS.delivery %><%=  %></p>
            <% } else { %>
                <p>Category: <%= content_JS.category %><%=  %></p>
                <p>Type: <%= content_JS.type %><%=  %></p>
                <p>Joke: <%= content_JS.joke %><%=  %></p>
                <% } %>
        <% } %>
        
        <hr>
        <!-- Form to take inputs from user regarding what kind of joke to get -->
        <form id="myForm" method="post">
            <label for="category">Category:</label>
            <select id="category" name="category">
                <option value="Any">Any</option>
                <option value="Misc">Misc</option>
                <option value="Programming">Programming</option>
                <option value="Dark">Dark</option>
                <option value="Pun">Pun</option>
                <option value="Spooky">Spooky</option>
                <option value="Christmas">Christmas</option>
            </select>
      
            <label for="type">Type:</label>
            <select id="type" name="type">
                <option value="single">Single</option>
                <option value="twopart">Two Part</option>
            </select>
      
            <label for="submit">Action:</label>
            <input id="post" type="submit" value="GET Joke" formaction="/aJoke">
      
        </form>



    </div>
    
</body>
</html>